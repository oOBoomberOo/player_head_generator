      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/minecraft-stat",
        "destination": "/html/stat.html"
      },
      {
        "source": "**",
        "destination": "/html/index.html"
      }
    ]
  }
}
